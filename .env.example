# ── Twitter (Twikit — free, no API key needed) ──
TWIKIT_USERNAME=                 # Your Twitter/X username
TWIKIT_PASSWORD=                 # Your Twitter/X password
TWIKIT_EMAIL=                    # Email associated with your Twitter account (optional, for 2FA)
TWIKIT_COOKIE_PATH=              # Path to persist login cookies (optional, e.g. ./cookies.json)

# ── Twitter (Official API — alternative to Twikit) ──
X_API_KEY=                       # OAuth 1.0a consumer key
X_API_SECRET=                    # OAuth 1.0a consumer secret
X_BEARER_TOKEN=                  # App-only bearer token (for search)
X_CLIENT_ID=                     # OAuth 2.0 client ID
X_CLIENT_SECRET=                 # OAuth 2.0 client secret (confidential apps)
X_REDIRECT_URI=http://localhost:8400/callback

# ── LLM Providers ──
ANTHROPIC_API_KEY=               # Claude API key
OPENAI_API_KEY=                  # OpenAI API key (optional)
OLLAMA_HOST=http://localhost:11434  # Ollama server URL (default: localhost:11434)

# ── API Security ──
SIGNALOPS_API_KEY=               # Dashboard API key (leave empty for open access in self-hosted mode)

# ── Storage ──
DATABASE_URL=sqlite:///signalops.db   # SQLite default, PostgreSQL for production
REDIS_URL=redis://localhost:6379/0     # Optional, for caching

# ── Observability (optional) ──
LANGFUSE_SECRET_KEY=             # Langfuse secret key for LLM tracing
LANGFUSE_PUBLIC_KEY=             # Langfuse public key
LANGFUSE_HOST=                   # Langfuse server URL (default: cloud.langfuse.com)

# ── Notifications (optional) ──
DISCORD_WEBHOOK_SPECTRA=         # Project-specific Discord webhook
SLACK_WEBHOOK_SALESENSE=         # Project-specific Slack webhook

# ── Alternative Data Sources (optional) ──
SOCIALDATA_API_KEY=              # SocialData.tools API key
